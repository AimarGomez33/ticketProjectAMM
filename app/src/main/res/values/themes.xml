<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. This theme will have an ActionBar by default. -->
    <style name="Theme.TicketApp.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores Primarios -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary_variant</item>
        <item name="colorOnPrimary">@color/app_on_primary</item>

        <!-- Colores Secundarios -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorSecondaryVariant">@color/app_secondary_variant</item>
        <item name="colorOnSecondary">@color/app_on_secondary</item>

        <!-- Otros colores importantes del tema -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorError">@color/app_error</item>

        <item name="colorOnBackground">@color/app_on_background</item>
        <item name="colorOnSurface">@color/app_on_surface</item>
        <item name="colorOnError">@color/app_on_error</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- Set to true if colorPrimaryVariant is light -->
    </style>

    <!-- Theme for activities that will provide their own Toolbar -->
    <style name="Theme.TicketApp.NoActionBar" parent="Theme.TicketApp.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- You can also directly inherit from a NoActionBar MaterialComponents theme if preferred for new activities -->
    <style name="Theme.TicketApp.PureNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores Primarios -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary_variant</item>
        <item name="colorOnPrimary">@color/app_on_primary</item>

        <!-- Colores Secundarios -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorSecondaryVariant">@color/app_secondary_variant</item>
        <item name="colorOnSecondary">@color/app_on_secondary</item>

        <!-- Otros colores importantes del tema -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorError">@color/app_error</item>

        <item name="colorOnBackground">@color/app_on_background</item>
        <item name="colorOnSurface">@color/app_on_surface</item>
        <item name="colorOnError">@color/app_on_error</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- Set to true if colorPrimaryVariant is light -->
    </style>

</resources>
